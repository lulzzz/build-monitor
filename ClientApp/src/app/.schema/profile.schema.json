{
  "$schema": "http://json-schema.org/draft-04/schema",
  "uri": "http://example.com/profile-schema.json",
  "fileMatch": [
    "*"
  ],
  "schema": {
    "type": "object",
    "properties": {
      "screens": {
        "type": "array",
        "items": {
          "anyOf": [
            { "$ref": "#/definitions/buildStatusScreen" }
          ]
        }
      }
    },
    "definitions": {
      "teamCityBuildListConfig": {
        "properties": {
          "buildIds": {
            "type": "array"
          }
        }
      },
      "buildList": {
        "type": "object",
        "required": ["buildServer", "buildIds"],
        "properties": {
          "buildServer": {
            "type": "string",
            "description": "build server name",
            "enum": ["main"]
          },
          "config": {
            "anyOf":{ "$ref": "#/definitions/teamCityBuildListConfig" }
          }
        }
      },
      "screenType": {
        "type": "string",
        "enum": ["buildMonitor"]
      },
      "buildStatusScreen": {
        "type": "object",
        "required": ["type", "builds"],
        "properties": {
          "type": { "$ref": "#/definitions/screenType" },
          "displayTime": {
            "type": "number",
            "description" : "Screen display time in seconds",
            "default" : 60
          },
          "builds": {
            "type": "array",
            "items": {
              "anyOf": [
                { "$ref": "#/definitions/buildList" }
              ]
            }
          }
        }
      }
    }
  }
}
